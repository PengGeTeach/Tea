<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.phone1000.chayu.activity.TeaListActivity">

    <com.phone1000.chayu.weidgt.TopBar
        android:id="@+id/tealist_activity_top_bar"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/tea_list_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <CheckBox
            android:id="@+id/tea_list_tea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:drawableRight="@drawable/selector_cha_icon"
            android:gravity="center"
            android:text="绿茶"
            android:textColor="@drawable/selector_cha_text"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/tea_list_pingfen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:drawableRight="@drawable/selector_cha_icon"
            android:gravity="center"
            android:text="评分"
            android:textColor="@drawable/selector_cha_text"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/tea_list_pinjian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@null"
            android:drawableRight="@drawable/selector_cha_icon"
            android:gravity="center"
            android:text="评鉴年份"
            android:textColor="@drawable/selector_cha_text"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/tea_list_chayang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@null"
            android:drawableRight="@mipmap/jiantou_icon1"
            android:gravity="center"
            android:text="茶样存库"
            android:textColor="@drawable/selector_cha_text"
            android:textSize="18sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/tea_list_listview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
