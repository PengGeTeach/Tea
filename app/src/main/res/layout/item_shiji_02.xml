<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_shiji_02_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_shiji_02_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_shiji_02_title"
        android:layout_alignTop="@+id/item_shiji_02_title"
        android:textColor="@color/text_dark_red"
        android:text="售罄"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/item_shiji_02_title"
        android:layout_below="@id/item_shiji_02_image"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_shiji_02_icon"
        android:text="2016 年"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_shiji_02_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/item_shiji_02_icon"
        android:layout_below="@id/item_shiji_02_title"
        android:text="花茶"/>
    <ImageView
        android:id="@+id/item_shiji_02_touxiang"
        android:layout_below="@id/item_shiji_02_image"
        android:layout_marginTop="-15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_shiji_02_jilu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#c21a1a"
        android:layout_below="@id/item_shiji_02_touxiang"
        android:layout_alignTop="@id/item_shiji_02_xiangqing"
        android:layout_alignBottom="@id/item_shiji_02_xiangqing"
        android:layout_alignRight="@id/item_shiji_02_touxiang"
        android:text="1732人买过"
        />


</RelativeLayout>