<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/ic_launcher"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/wenzhang_title_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#33000000"
            >

            <TextView
                android:id="@+id/wenzhang_fenlei"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="测试"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:background="#ac4949"
                />

            <TextView
                android:id="@+id/wenzhang_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="测试文档"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                />

            <LinearLayout
                android:id="@+id/ll_dot"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

       <LinearLayout
           android:id="@+id/ll1"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="80dp"
           android:orientation="vertical"
           android:gravity="center"
           >

           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@mipmap/zuixin_icon0"
               />

           <TextView
               android:id="@+id/zuixin"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:text="最新"
               android:gravity="center"
               android:textColor="#000000"
               android:textSize="15sp"
               />

       </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/renqi_icon0"
                />

            <TextView
                android:id="@+id/remen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="热门"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/zhuanti_icon"
                />

            <TextView
                android:id="@+id/zhaunti"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="专题"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>