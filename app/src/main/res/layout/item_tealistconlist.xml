<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_tealistconlist_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_tealistconlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_tealistconlist_image"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_tealistconlist_image"
                android:text="test"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_tealistconlist_chayupingwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tealistconlist_title"
                android:layout_alignLeft="@id/item_tealistconlist_title"
                android:textSize="@dimen/item_tealist_text_size"
                android:layout_marginTop="15dp"
                android:text="@string/chayupingfen" />
            <TextView
                android:id="@+id/item_tealistconlist_chayu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_tealistconlist_chayupingwen"
                android:layout_alignTop="@id/item_tealistconlist_chayupingwen"
                android:textSize="@dimen/item_tealist_text_size"
                android:text="8.8"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_dark_red"/>

            <TextView
                android:id="@+id/item_tealistconlist_zonghepingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_tealistconlist_chayu"
                android:layout_alignBottom="@id/item_tealistconlist_chayu"
                android:textSize="@dimen/item_tealist_text_size"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/zonghepingfen" />
            <TextView
                android:id="@+id/item_tealistconlist_zonghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_tealistconlist_zonghepingfen"
                android:layout_alignTop="@id/item_tealistconlist_zonghepingfen"
                android:textSize="@dimen/item_tealist_text_size"
                android:text="8.8"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_dark_red"/>
            <TextView
                android:id="@+id/item_tealistconlist_tea_type"
                android:layout_below="@id/item_tealistconlist_chayupingwen"
                android:layout_alignLeft="@id/item_tealistconlist_chayupingwen"
                android:textSize="@dimen/item_tealist_text_size"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿茶＞西湖龙井"/>
            <TextView
                android:id="@+id/item_tealistconlist_price"
                android:layout_toRightOf="@id/item_tealistconlist_tea_type"
                android:layout_alignLeft="@id/item_tealistconlist_zonghepingfen"
                android:textSize="@dimen/item_tealist_text_size"
                android:layout_alignTop="@id/item_tealistconlist_tea_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考价: ¥60"/>
            <TextView
                android:id="@+id/item_tealistconlist_chayang"
                android:layout_alignLeft="@id/item_tealistconlist_chayupingwen"
                android:textSize="@dimen/item_tealist_text_size"
                android:layout_alignBottom="@id/item_tealistconlist_image"
                android:text="暂无茶样"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>