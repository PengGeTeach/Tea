<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_fragment_quanzi_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_fragment_quanzi_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignTop="@id/item_fragment_quanzi_list_image"
        android:layout_toRightOf="@id/item_fragment_quanzi_list_image"
        android:layout_marginLeft="10dp"
        android:text="[新人报道季]第1期中奖"/>
    <TextView
        android:id="@+id/item_fragment_quanzi_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/item_fragment_quanzi_list_title"
        android:layout_below="@id/item_fragment_quanzi_list_title"
        android:text="qqqqweqwqewqrwqrtererqrewrqwrewrqwrewqrqreqrewwqrqrerqerrqwreqr"/>
    <TextView
        android:id="@+id/item_fragment_quanzi_list_pinlun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/item_fragment_quanzi_list_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/item_fragment_quanzi_list_content"
        android:drawableLeft="@mipmap/pinglun_icon"
        android:gravity="center"
        android:text=" 32"
        />
    <TextView
        android:id="@+id/item_fragment_quanzi_list_liulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/liulan_icon"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/item_fragment_quanzi_list_pinlun"
        android:text=" 32"
        android:gravity="center"
        android:layout_alignBottom="@id/item_fragment_quanzi_list_pinlun"
        />



</RelativeLayout>