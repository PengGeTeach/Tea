<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_wenzhang_homepage_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_wenzhang_homepage_height"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_wenzhang_homepage_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dull_red"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/item_wenzhang_homepage_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="World"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_wenzhang_homepage_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:drawableLeft="@mipmap/zan_icon"
                    android:text="hello | "/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/liulan_icon"
                    android:id="@+id/item_wenzhang_homepage_text2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray"
                    android:layout_height="wrap_content"
                    android:text="World"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>