<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.phone1000.chayu.weidgt.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#898585"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/cx_name"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="名称"
            android:gravity="center"
            android:textSize="15sp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_drawable"
            android:textColor="@drawable/chexkbox_color"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#a79d9d"
            android:layout_marginLeft="10dp"
            />

        <CheckBox
            android:id="@+id/cx_pingfen"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="评分"
            android:gravity="center"
            android:textSize="15sp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_drawable"
            android:textColor="@drawable/chexkbox_color"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#a79d9d"
            android:layout_marginLeft="10dp"
            />

        <CheckBox
            android:id="@+id/cx_niandu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="品鉴年度"
            android:gravity="center"
            android:textSize="15sp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_drawable"
            android:textColor="@drawable/chexkbox_color"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#a79d9d"
            android:layout_marginLeft="10dp"
            />

        <CheckBox
            android:id="@+id/cx_kucun"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="茶样库存"
            android:gravity="center"
            android:textSize="15sp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_drawable"
            android:textColor="@drawable/chexkbox_color"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#a79d9d"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/pinpai_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>